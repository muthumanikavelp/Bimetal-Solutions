
@{
    ViewBag.Title = "AdvancaClaim";
    Layout = "~/Views/Shared/_BLayout.cshtml";
}


<h1 class="text-center"></h1>
<div class="panel panel-default">
    <div class="panel-heading text-center">Advance Claim Form</div>
    <div class="panel-body">
        <h2 class="panel-subhead">Header</h2>
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Emp ID :</label>
                    <span>Login</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Emp Name :</label>
                    <span>Emp master</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Department :</label>
                    <span>Emp master</span>
                </div>
            </div>

            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Grade :</label>
                    <span>Login</span>
                </div>
            </div>
           
        </div>
        <div class="divider"></div>
        <h2 class="panel-subhead">Travel Pre Approval</h2>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 form-inline mb10">
                <div class="form-group">
                    <label>Pre App No:</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 form-inline mb10">
                <div class="form-group">
                    <label>Place :</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 form-inline mb10">
                <div class="form-group">
                    <label>Description :</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 form-inline mb10">
                <div class="form-group">
                    <label>Date Form :</label>
                    <div class="input-daterange input-group">
                        <input type="text" class="form-control" />
                        <span class="input-group-btn">
                            <span class="btn btn-primary"><i class="fa fa-calendar"></i></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 form-inline mb10">
                <div class="form-group">
                    <label>Date To :</label>
                    <div class="input-daterange input-group">
                        <input type="text" class="form-control" />
                        <span class="input-group-btn">
                            <span class="btn btn-primary"><i class="fa fa-calendar"></i></span>
                        </span>
                    </div>
                </div>
            </div>           
        </div>        
    </div>
    <div class="form-group">
        <label class="col-lg-5 col-md-4 col-sm-6 col-xs-12 text-right"></label>
        <div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
            <button type="button" class="btn btn-default">Cancel</button>
            <button type="button" class="btn btn-primary">Submit</button>
        </div>
    </div>
</div>

    <script src="~/Content/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/js/bootstrap.js"></script>
    <script src="~/Content/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $('.input-daterange').datepicker({
            format: "dd/mm/yyyy",
            startDate: 0,
            autoclose: true,
            todayHighlight: true
        });
    });
</script>
