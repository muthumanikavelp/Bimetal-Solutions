@{
    ViewBag.Title = "TravelClaimForm";
    Layout = "~/Views/Shared/_BLayout.cshtml";
}


<h1 class="text-center"></h1>
<div class="panel panel-default">
    <div class="panel-heading text-center">Travel Claim Form</div>
    <div class="panel-body">
        <h2 class="panel-subhead">Header</h2>
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Emp ID :</label>
                    <span>Login</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Emp Name :</label>
                    <span>Emp master</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Department :</label>
                    <span>Emp master</span>
                </div>
            </div>

            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Grade :</label>
                    <span>Login</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Claim No :</label>
                    <span>Emp master</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Claim Date :</label>
                    <span>Emp master</span>
                </div>
            </div>

            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Claim Amount :</label>
                    <span>Login</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 form-inline">
                <div class="form-group">
                    <label>Location :</label>
                    <span>Emp master</span>
                </div>
            </div>
        </div>
        <div class="divider"></div>
        <h2 class="panel-subhead">Travel Pre Approval</h2>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 form-inline mb10">
                <div class="form-group">
                    <label>Pre App No:</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 form-inline mb10">
                <div class="form-group">
                    <label>Place :</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 form-inline mb10">
                <div class="form-group">
                    <label>Description :</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 form-inline mb10">
                <div class="form-group">
                    <label>Date Form :</label>
                    <div class="input-daterange input-group">
                        <input type="text" class="form-control" />
                        <span class="input-group-btn">
                            <span class="btn btn-primary"><i class="fa fa-calendar"></i></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 form-inline mb10">
                <div class="form-group">
                    <label>Date To :</label>
                    <div class="input-daterange input-group">
                        <input type="text" class="form-control" />
                        <span class="input-group-btn">
                            <span class="btn btn-primary"><i class="fa fa-calendar"></i></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card p10">
    <div class="row">
        <div class="col-xs-12 form-inline mb10">
            <div class="form-group">
                <label class="col-md-offset-1">Choose Expenses :</label>
                <select class="form-control">
                    <option>Example1</option>
                    <option>Example2</option>
                    <option>Example3</option>
                </select>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Ticket Expenses <button class="btn btn-sm btn-primary pull-right" data-toggle="modal" data-target="#summary-modal"><i class="fa fa-plus-circle" aria-hidden="true"></i></button></div>
        <div class="panel-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>SI</th>
                        <th>Travel Mode</th>
                        <th>Date</th>
