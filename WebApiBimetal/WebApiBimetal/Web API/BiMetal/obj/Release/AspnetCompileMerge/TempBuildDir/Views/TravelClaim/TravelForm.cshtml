                        <div class="col-lg-4 col-md-4 col-sm-2 col-xs-4">
                            <input type="text" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-2 col-xs-4 text-right">Emp ID</label>
